<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/default_color_darker">
    <item
        android:height="2dp"
        android:gravity="bottom"
        android:start="80dp">
        <shape android:shape="oval">
            <solid android:color="@color/light" />
            <gradient
                android:angle="270"
                android:endColor="@color/light"
                android:startColor="@color/trans_dark_high_twice" />
        </shape>
    </item>

    <item
        android:id="@android:id/mask"
        android:height="2dp"
        android:gravity="bottom|center_horizontal"
        android:start="80dp">
        <shape android:shape="oval">
            <solid android:color="@color/default_color_darker" />
        </shape>
    </item>
</ripple>